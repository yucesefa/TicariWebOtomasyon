@using Projee.Models
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>FaturaDetay</h2>

<table class="table table-hover">

    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemId>
            <td>@x.Aciklama</td>
            <td>@x.miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
        </tr>
    }

</table>
<a href="/Fatura/YeniKalem" class="btn btn-default"style="background-color:darksalmon">Yeni Kalem Girişi</a>

