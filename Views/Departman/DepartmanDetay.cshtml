@using Projee.Models
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb" mb-4>
    <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
</ol>
<table class="table table-hover">

    <tr>
        <th>Personel ID</th>
        <th>Ad</th>
        <th> Soyad</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.PersonelId</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color:crimson">Satışlar</a></td>
    </tr>
    }

</table> 

