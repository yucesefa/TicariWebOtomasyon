@using Projee.Models
@model List<SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.cari</li>
</ol>
<div>
    <table class="table table-hover">
        <tr>
            <th>Satış ID</th>
            <th>Tarih</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Cari ID</th>
            <th>Personel ID</th>
            <th>Urun ID</th>
            <th>Yazdır</th>
        </tr>

        @foreach (var k in Model)
        {
            <tr>

                <td>@k.SatisId</td>
                <td>@k.Tarih</td>
                <td>@k.Adet</td>
                <td>@k.Fiyat</td>
                <td>@k.ToplamTutar</td>
                <td>@k.Cariler.CariAd</td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                <td>@k.Urun.UrunAd</td>
                <td><a href="/Cari/CariSil/@k.SatisId" class="btn btn-info">Yazdır</a></td>
               

            </tr>
        }



    </table>
</div>
<a href="/Cari/CariEkle" class="btn btn-primary"> Yeni Cari Ekle</a>


