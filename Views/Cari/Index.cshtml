@using Projee.Models
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <table class="table table-hover">
        <tr>
            <th>Cari Adı</th>
            <th>Cari Soyadı</th>
            <th>Cari Şehir</th>
            <th>Cari Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>

        @foreach (var k in Model)
        {
            <tr>

                <td>@k.CariAd</td>
                <td>@k.CariSoyad</td>
                <td>@k.CariSehir</td>
                <td>@k.CariMail</td>
                <td><a href="/Cari/CariSil/@k.CariId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGetir/@k.CariId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Cari/MusteriSatis/@k.CariId" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>

            </tr>
        }



    </table>
</div>
<a href="/Cari/CariEkle" class="btn btn-primary"> Yeni Cari Ekle</a>



