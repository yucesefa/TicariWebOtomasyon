@using Projee.Models
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div>
    <table id="tbl1" class="table table-hover">
        <thead>
            <tr>
                <th>Satış ID</th>
                <th>Tarih</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam Tutar</th>
                <th>Cari ID</th>
                <th>Personel ID</th>
                <th>Urun ID</th>
                <th>Güncelle</th>
                <th>Detay</th>
            </tr>
        </thead>


        @foreach (var k in Model)
        {
            <tr>

                <td>@k.SatisId</td>
                <td>@k.Tarih</td>
                <td>@k.Adet</td>
                <td>@k.Fiyat</td>
                <td>@k.ToplamTutar</td>
                <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                <td>@k.Urun.UrunAd</td>
                <td><a href="/Satis/SatisGetir/@k.SatisId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@k.SatisId" class="btn btn-warning">Detay</a></td>


            </tr>
        }



    </table>
</div>
<a href="/Satis/SatisEkle" class="btn btn-primary"> Yeni Satış Ekle</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

